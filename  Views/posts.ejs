<H1>Posts</H1>
<div id="posts">
<% for(post of result){%>

<li>
    <p>
      <%= post.posts%>
      <br>
      <form action="/comment/create" method="post">
        <input type="text" id="" name="comment" class="comment">
        <input type="hidden" name="post_id" value="<%= post.id%>">
        <input type="submit" value="Comment">
      </form>
      

    <small>
        <%= post.user.name%>
    </small>  
    </p>
</li>


<%}%>
</div>
